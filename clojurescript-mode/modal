# -*- mode: snippet -*-
# name: antd Modal
# key: modal
# --
(defn $1 []
  (let [visible? (atom false)]
    (fn []
      [:div
       [:> antd/Button {:on-click #(reset! visible? true)} $2]
       [:> antd/Modal {:visible @visible? :on-cancel #(reset! visible? false)}
        $0
        ]])))
